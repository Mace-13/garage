{% extends 'base.html.twig' %}

{% block title %}Voiture : {{ car.marque }}{% endblock %}

{% block body %}

    <div class="annonce-title text-danger" style="background-image: url({{car.coverImage}});background-repeat:no-repeat;background-size:cover;">
        <div class="container">
            <h1>{{car.marque}}</h1>
            <p>{{car.description}}</p>
            <p class="h2 mb-3"><strong>{{car.modele}}</strong> à partir de <strong>{{car.prix}}</strong>€ </p>
        </div>
    </div>
    <div class="container">
        <div class="row">
            <div class="col-md-8 mt-3 mb-3 ">
                <p>Nombre de km: {{ car.km }} km</p>
                <p>Cylindrée: {{ car.cylindre }}</p>
                <p>Puissance: {{ car.puissance }}</p>
                <p>Carburant: {{ car.carburant }}</p>
                <p>Date de mise en circulation: {{ car.miseCirculation |date('d-m-Y') }}</p>
                <p>Transmission: {{ car.transmission }}</p>
                <p>Options:{{car.carOption | raw | nl2br }} </p>
                <div id="carouselExampleCaptions" class="carousel slide" data-ride="carousel">
                    <ol class="carousel-indicators">
                        {% for image in car.images %}
                            <li data-target="#carouselExampleCaptions" data-slide-to="{{ loop.index0 }}" {% if loop.first %} class="active" {% endif %}></li>
                        {% endfor %}
                    </ol>
                    <div class="carousel-inner">

                        {% for image in car.images %}
                            <div class="carousel-item {% if loop.first %}active{% endif %}">
                                <img src="{{ image.url }}" class="d-block w-100" alt="image de {{ car.marque }}">
                                <div class="carousel-caption d-none d-md-block">
                                    <h5>{{ car.marque }}</h5>
                                    <p>{{ image.caption }}</p>
                                </div>
                            </div>
                        {% endfor %}



                    </div>
                    <a class="carousel-control-prev" href="#carouselExampleCaptions" role="button" data-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="sr-only">Previous</span>
                    </a>
                    <a class="carousel-control-next" href="#carouselExampleCaptions" role="button" data-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="sr-only">Next</span>
                    </a>
                </div>

            </div>

        </div>
    </div>
{% endblock %}